mongodb_uri     = "mongodb+srv://username:password@cluster.mongodb.net/podcast_db"
openai_api_key  = "sk-..."

# Optional: Logging
log_level = "INFO"

# Optional: Additional tags
tags = {
  Team = "Engineering"
  Cost = "Development"
}
