# ========================================
# FRONTEND CONFIGURATION
# ========================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000/api

# ========================================
# BACKEND CONFIGURATION
# ========================================
# MongoDB Configuration
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=podcast_db

# AWS/LocalStack Configuration
AWS_ENDPOINT_URL=http://localstack:4566
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 Bucket Name
S3_BUCKET_NAME=podcast-audio

# OpenAI API Key (required for transcription)
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Whisper Service URL (for dev-only local transcription)
WHISPER_SERVICE_URL=http://whisper:9000

# Step Functions ARN (for LocalStack in dev)
# For production, this will be set by Terraform
STEP_FUNCTION_ARN=arn:aws:states:us-east-1:000000000000:stateMachine:podcast-processing

# ========================================
# API SERVER CONFIGURATION
# ========================================
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3017,http://frontend:3017

# Logging Level (debug, info, warning, error)
LOG_LEVEL=info

# Server Host and Port
APP_HOST=0.0.0.0
APP_PORT=8000

# ========================================
# DOCKER CONFIGURATION
# ========================================
# Compose Project Name
COMPOSE_PROJECT_NAME=podcast-app
